#include <stdio.h>

int main() {
    int numeros[10];
    int i, maior, menor, soma = 0;
    float media;

    // Entrada dos 10 números
    printf("Digite 10 números inteiros:\n");
    for (i = 0; i < 10; i++) {
        printf("Número %d: ", i + 1);
        scanf("%d", &numeros[i]);
        soma += numeros[i];
    }

    // Inicializa maior e menor com o primeiro elemento
    maior = menor = numeros[0];

    // Percorre o vetor para encontrar maior e menor
    for (i = 1; i < 10; i++) {
        if (numeros[i] > maior) {
            maior = numeros[i];
        }
        if (numeros[i] < menor) {
            menor = numeros[i];
        }
    }

    // Calcula a média
    media = (float)soma / 10;

    // Exibe resultados
    printf("\nMaior número: %d\n", maior);
    printf("Menor número: %d\n", menor);
    printf("Média dos números: %.2f\n", media);

    return 0;
}
