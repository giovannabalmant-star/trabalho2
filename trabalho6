#include <stdio.h>

int main() {
    int n, i, eh_primo = 1; // 1 = verdadeiro

    // Entrada de dados
    printf("Digite um número inteiro (n ≥ 2): ");
    scanf("%d", &n);

    if (n < 2) {
        printf("O número deve ser maior ou igual a 2.\n");
        return 0;
    }

    // Testa divisores de 2 até n-1
    for (i = 2; i < n; i++) {
        if (n % i == 0) {
            eh_primo = 0; // encontrou divisor
            break;        // sai do loop ao encontrar o primeiro divisor
        }
    }

    // Verificação e
